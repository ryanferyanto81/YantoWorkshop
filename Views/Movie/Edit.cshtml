@model Movie
@{
    ViewData["Title"] = "Edit Movie";
}

<div>
    <h2>@Model.NamaProduk</h2>  
            <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NamaProduk" class="control-label"></label>
                <input asp-for="NamaProduk" class="form-control" />
                <span asp-validation-for="NamaProduk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TanggalOrder" class="control-label"></label>
                <input asp-for="TanggalOrder" class="form-control" />
                <span asp-validation-for="TanggalOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JumlahBarang" class="control-label"></label>
                <input asp-for="JumlahBarang" class="form-control" />
                <span asp-validation-for="JumlahBarang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Harga" class="control-label"></label>
                <input asp-for="Harga" class="form-control" />
                <span asp-validation-for="Harga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}